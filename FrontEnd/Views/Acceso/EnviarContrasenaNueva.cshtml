@{
    ViewData["Title"] = "Inicio de Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FrontEnd.Models.Propietario
<div class="container-fluid bg-secondary my-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 py-5 py-lg-0">
                <h6 class="text-primary text-uppercase font-weight-bold">
                    Ingresa tu código
                    de seguridad
                </h6>
                <h1 class="mb-4">
                    Un código de seguridad se ha enviado al correo
                    @Model.Correo
                </h1>
                <p class="mb-4">
                    Ingresa el código de seguridad para recibir una contraseña
                    nueva
                </p>
            </div>
            <div class="col-lg-6">
                <div class="bg-primary py-5 px-4 px-sm-5">
                    <form class="py-5" asp-controller="Acceso" asp-action="EnviarContrasenaAleatoria" method="post"
                          id="contrasenaForm">

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <h6 class="text-primary text-uppercase font-weight-bold" style="color:black !important">
                            Ingresa tu
                            código de seguridad
                        </h6>
                        <div class="form-group">
                            <input id="IdCliente" type="text" class="form-control border-0 p-4" value="@Model.IdPropietario"
                                   name="IdPropietario" required="required" hidden />
                        </div>
                        <div class="form-group">
                            <input id="ClaveRecupera" type="text" class="form-control border-0 p-4"
                                   placeholder="Código de seguridad" name="ClaveRecupera" required="required" />
                        </div>

                        <div>
                            <button id="enviarCodigo" class="btn btn-dark btn-block border-0 py-3"
                                    type="submit">
                                Solicitar nueva contraseña
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>